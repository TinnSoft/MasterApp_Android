        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="android:fontFamily">@font/semibold</item>
        <item name="fontFamily">@font/semibold</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:fontFamily">@font/semibold</item>
        <item name="fontFamily">@font/semibold</item>
    </style>

    <style name="AppThemeHome.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="android:textColor">@color/green_background</item>
        <item name="android:fontFamily">@font/semibold</item>
        <item name="fontFamily">@font/semibold</item>
        <item name="actionMenuTextColor">@color/green_background</item>
        <item name="android:actionMenuTextColor">@color/green_background</item>

    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/green_background</item>
    </style>


    <style name="AppThemeHome.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="android:fontFamily">@font/semibold</item>
        <item name="fontFamily">@font/semibold</item>
        <item name="actionMenuTextColor">@color/green_background</item>
        <item name="android:actionMenuTextColor">@color/green_background</item>
    </style>

    <style name="MyToolbarStyle" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorSecondary">#333333</item>
        <item name="android:fontFamily">@font/semibold</item>
        <item name="fontFamily">@font/semibold</item>
        <item name="actionMenuTextColor">@color/green_background</item>
        <item name="android:actionMenuTextColor">@color/green_background</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#f00</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#00f</item>
    </style>

    <style name="myCustomMenuTextAppearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@android:color/primary_text_dark</item>
    </style>

