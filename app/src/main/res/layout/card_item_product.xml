<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_marginBottom="10dp"
                >
                <ImageView
                    android:id="@+id/card_photo"
                    android:layout_width="70dp"
                    android:layout_height="72dp"
                    android:src="@mipmap/img_paella"
                    android:scaleType="centerCrop"
                    />
            </android.support.v7.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="11dp"
                android:paddingBottom="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/card_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Paella"
                        android:fontFamily="@font/montserrat_medium"
                        android:textStyle="bold"
                        android:textSize="12dp"/>
                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:src="@drawable/ic_star"
                        android:layout_gravity="center"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:gravity="right"
                       >

                        <Button
                            android:id="@+id/btn_add"
                            android:layout_width="60dp"
                            android:layout_height="23dp"
                            android:textColor="@color/mainBackground"
                            android:textSize="10dp"
                            android:layout_marginEnd="0dp"
                            android:stateListAnimator="@null"

                            android:background="@drawable/border_button"
                            android:text="Agregar"
                            android:textAllCaps="false"
                            style="?android:attr/borderlessButtonStyle" />
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/card_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="9dp"
                    android:fontFamily="@font/montserrat_light"
                    android:text="$45.000"/>
                <TextView
                    android:id="@+id/card_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8dp"
                    android:fontFamily="@font/montserrat_light"
                    android:text="orem Ipsum is simply dummy text of the printing and typesetting industry asdasd adas dasd asd asdasdasd asdas das dasd "/>

            </LinearLayout>

        </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_marginBottom="51dp"
                android:id="@+id/group_bottom"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                >

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="4dp">

                <LinearLayout
                    android:layout_width="108dp"
                    android:layout_height="38dp"
                    android:orientation="horizontal"

                    android:background="@color/bluemaster">


                    <Button
                        android:id="@+id/btn_quit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textSize="20dp"

                        android:onClick="onClick"
                        android:background="@color/bluemaster"
                        android:textColor="@color/white"
                        android:layout_weight="2"
                        android:button="@android:color/transparent"/>
                    <TextView
                        android:id="@+id/txt_total"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:textAlignment="center"
                        android:text="0"
                        android:textColor="@color/white"
                        android:layout_weight="2"/>
                    <Button
                        android:id="@+id/btn_add_product"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="+"
                        android:textSize="20dp"
                        android:background="@color/bluemaster"
                        android:textColor="@color/white"
                        android:onClick="onClick"
                        android:layout_weight="2"
                        android:button="@android:color/transparent"/>
                </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    app:cardCornerRadius="4dp">

                <Button
                    android:id="@+id/btn_ok"

                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="Ok"
                    android:textSize="18dp"
                    android:background="@color/bluemaster"
                    android:textColor="@color/white"
                    android:onClick="onClick"
                    android:textAllCaps="false"/>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </LinearLayout>
