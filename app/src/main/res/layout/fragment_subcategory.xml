<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FragmentMenu.SubcategoryFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <ToggleButton
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_custom_burger"

                android:text=""
                android:textOff=""
                android:textOn=""
                android:id="@+id/btn_burger"
                />

            <ToggleButton
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_custom_chicken"

                android:text=""
                android:textOff=""
                android:textOn=""
                android:id="@+id/btn_chicken"
                />

            <ToggleButton
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_custom_pasta"

                android:text=""
                android:textOff=""
                android:textOn=""
                android:id="@+id/btn_pasta"
                />

            <ToggleButton
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_custom_pizza"

                android:text=""
                android:textOff=""
                android:textOn=""
                android:id="@+id/btn_pizza"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="horizontal"
            android:weightSum="1">
            <android.support.v7.widget.SearchView
                android:layout_weight="0.1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:defaultQueryHint="Â¿Que estas buscando?"
                android:id="@+id/txtsearch"
                >

            </android.support.v7.widget.SearchView>
            <ImageView
                android:layout_weight="0.9"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:src="@mipmap/ic_input_menu"
                android:id="@+id/btn_filter"/>
        </LinearLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/chefRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>

</FrameLayout>