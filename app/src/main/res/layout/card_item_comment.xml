<android.support.v7.widget.CardView
        android:id="@+id/card_complete"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:layout_marginBottom="2dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp">

            <android.support.v7.widget.CardView
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:layout_centerHorizontal="true"
                app:cardCornerRadius="6dp"
                android:layout_marginStart="25dp"
                android:id="@+id/car_content_letter"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="5dp"
                app:cardBackgroundColor="@color/mainBackground"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <TextView
                        android:id="@+id/card_initial"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="D"
                        android:textColor="@color/white"
                        android:textSize="25dp"
                        android:gravity="center_horizontal|center_vertical"
                        />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="20dp">
                <TextView
                    android:id="@+id/card_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Daniel Polanco"
                    android:textStyle="bold"
                    android:textSize="19dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                    <ImageView
                        android:layout_width="@dimen/size_start"
                        android:layout_height="@dimen/size_start"
                        android:src="@drawable/img_start_yellow"/>
                    <ImageView
                        android:layout_width="@dimen/size_start"
                        android:layout_height="@dimen/size_start"
                        android:src="@drawable/img_start_yellow"/>
                    <ImageView
                        android:layout_width="@dimen/size_start"
                        android:layout_height="@dimen/size_start"
                        android:src="@drawable/img_start_yellow"/>
                    <ImageView
                        android:layout_width="@dimen/size_start"
                        android:layout_height="@dimen/size_start"
                        android:src="@drawable/img_start_yellow"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hace 2 horas"
                        android:layout_gravity="center_vertical"
                        android:textSize="8dp"/>
                </LinearLayout>


            </LinearLayout>
s
        </LinearLayout>
        <TextView
            android:id="@+id/card_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Una experiencia pesima"
            android:textSize="12dp"
            android:paddingStart="25dp"
            android:textStyle="bold"
            android:paddingLeft="20dp"/>
        <TextView
            android:id="@+id/card_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingEnd="25dp"
            android:paddingStart="25dp"
            android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries, but also the leap into electronic .."
            android:paddingBottom="20dp"
            android:textSize="8dp"/>
    </LinearLayout>


</android.support.v7.widget.CardView>