<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="1dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="0dp"
    android:id="@+id/card_complete"
   android:background="@color/white"
    >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00FFFFFF"
        android:elevation="0dp">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_photo"
            android:layout_width="48dp"
            android:layout_height="45dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_profile"
            app:civ_border_color="@android:color/white"
            app:civ_border_width="0dp"
            app:layout_constraintEnd_toStartOf="@+id/card_name"
            app:layout_constraintTop_toTopOf="@+id/card_name" />

        <TextView
            android:id="@+id/card_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="85dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/montserrat_black"
            android:text="Carla asda"
            android:textSize="15dp"
            cardView:layout_constraintBottom_toBottomOf="parent"
            cardView:layout_constraintEnd_toEndOf="parent"
            cardView:layout_constraintHorizontal_bias="0.0"
            cardView:layout_constraintStart_toStartOf="parent"
            cardView:layout_constraintTop_toTopOf="parent"
            cardView:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/card_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="4dp"
            android:layout_marginTop="2dp"
            android:text="Pendiente"
            android:textColor="#EEBD0D"
            android:textSize="11dp"
            cardView:layout_constraintStart_toEndOf="@+id/card_name"
            cardView:layout_constraintTop_toTopOf="@+id/card_name" />

        <TextView
            android:id="@+id/card_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="20 de Julio"
            android:textSize="11dp"
            cardView:layout_constraintBottom_toBottomOf="@+id/card_price"
            cardView:layout_constraintStart_toEndOf="@+id/card_price" />

        <TextView
            android:id="@+id/card_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="$ 190.000"
            android:textSize="11dp"
            cardView:layout_constraintStart_toStartOf="@+id/card_name"
            cardView:layout_constraintTop_toBottomOf="@+id/card_name" />

        <Button
            android:id="@+id/btn_review"
            android:layout_width="100dp"
            android:layout_height="23dp"
            android:background="@drawable/border_button_red"
            android:elevation="0dp"
            android:text="Ver Resumen"
            android:textAllCaps="false"
            android:textColor="@color/green_background"
            android:textColorHint="#00FFFFFF"
            android:textSize="11dp"
            cardView:layout_constraintBottom_toBottomOf="parent"
            cardView:layout_constraintEnd_toEndOf="parent"
            cardView:layout_constraintHorizontal_bias="0.326"
            cardView:layout_constraintStart_toStartOf="parent"
            cardView:layout_constraintTop_toTopOf="parent"
            cardView:layout_constraintVertical_bias="0.922" />

        <Button
            android:id="@+id/btn_help"
            android:layout_width="100dp"
            android:layout_height="23dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/border_button_red"
            android:text="Pedir Ayuda"
            android:textAllCaps="false"
            android:textColor="@color/green_background"
            android:textSize="11dp"
            cardView:layout_constraintBottom_toBottomOf="@+id/btn_review"
            cardView:layout_constraintStart_toEndOf="@+id/btn_review" />


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>